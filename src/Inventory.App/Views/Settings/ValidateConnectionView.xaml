<ContentDialog
    x:Class="Inventory.Views.ValidateConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Validating ConnectionString..."
    PrimaryButtonText="{x:Bind ViewModel.PrimaryButtonText, Mode=OneWay}"
    PrimaryButtonClick="OnOkClick"
    SecondaryButtonText="{x:Bind ViewModel.SecondaryButtonText, Mode=OneWay}"
    SecondaryButtonClick="OnCancelClick"
    mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="840">

    <StackPanel Margin="0,24" MinWidth="480">
        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.HasErrors, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <TextBlock Text="{x:Bind ViewModel.ProgressStatus, Mode=OneWay}" />
            <ProgressBar IsIndeterminate="True" />
        </StackPanel>
        <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" Visibility="{x:Bind ViewModel.HasErrors, Mode=OneWay}" TextWrapping="WrapWholeWords" Foreground="{StaticResource Error}" />
    </StackPanel>
</ContentDialog>
